<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Enter the track request" />
        <EditText
            android:id="@+id/trackrequest_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter here"
            android:textColor="#E91E63"
            android:layout_weight="2"
            android:inputType="number"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:text="add"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#84FFFF"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="addtrack"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FCFS"
        android:background="#CCFF90"
        android:textColor="#33691E"
        android:textStyle="bold"

        android:gravity="center_horizontal"
        android:textSize="30dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fcfs">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:id="@+id/fcfssum"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SSTF"
        android:background="#CCFF90"
        android:textColor="#33691E"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/sstu">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:id="@+id/sstfsum"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCAN"
        android:layout_marginTop="16dp"
        android:background="#CCFF90"
        android:textColor="#33691E"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/scan">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:id="@+id/scansum"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CSCAN"
        android:layout_marginTop="16dp"
        android:background="#CCFF90"
        android:textColor="#33691E"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/cscan">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:id="@+id/cscansum"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOOK"
        android:layout_marginTop="16dp"
        android:background="#CCFF90"
        android:textColor="#33691E"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/look">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:id="@+id/looksum"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLOOK"
        android:layout_marginTop="16dp"
        android:background="#CCFF90"
        android:textColor="#33691E"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/clook">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="20sp"
        android:textColor="#9C27B0"
        android:id="@+id/clooksum"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
</ScrollView>
</LinearLayout>